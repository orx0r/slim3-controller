{
    "name": "orx0r/slim3-controller",
    "type": "library",
    "description": "Implementation of controller for Slim Framework v3",
    "keywords": [
        "slim",
        "slim3",
        "mvc",
        "controller"
    ],
    "homepage": "https://github.com/orx0r/slim3-controller",
    "license": "MIT",
    "authors": [
        {
            "name": "orx0r",
            "email": "norbitronik@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "slim/slim": "^3.0"
    },
    "_repositories_": [
        {
            "type": "vcs",
            "url": "https://github.com/orx0r/slim3-controller"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "squizlabs/php_codesniffer": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Orx0r\\Slim\\Controller\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orx0r\\Slim\\Controller\\Tests\\": "tests/Controller"
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap tests/bootstrap.php",
        "phpcs": "phpcs --standard=psr2 src/"
    }
}
